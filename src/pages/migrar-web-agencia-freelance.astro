---
import MainLayout from '@/layouts/MainLayout.astro';
import MigrationLandingPage from '@/components/MigrationLandingPage';
import MigrationStructuredData from '@/components/migration-landing/MigrationStructuredData.astro';
import { LANG } from '@/i18n/index';
import { SITE_URL } from '@/constants';

// Default to Spanish, language can be changed in the component
const locale = LANG.SPANISH;

const currentUrl = `${SITE_URL}/migrar-web-agencia-freelance`;
const title = 'Migración y rescate de webs WordPress sin depender de agencias | RimoByte';
const description = 'Servicios de migración y rescate de webs WordPress. Ayudo a recuperar el control de tu web, migrarla con seguridad y dejarla preparada para que puedas gestionarla sin bloqueos técnicos.';

// Get reCAPTCHA site key from environment variable
const recaptchaSiteKey = import.meta.env.RECAPTCHA_SITE_KEY || '6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI';
---

<MainLayout 
  title={title}
  description={description}
  locale={locale}
  canonical={currentUrl}
>
  <MigrationStructuredData 
    url={currentUrl}
    city={null}
    locale="es"
  />
  <MigrationLandingPage client:only="react" recaptchaSiteKey={recaptchaSiteKey} initialLocale={locale} />
</MainLayout>
