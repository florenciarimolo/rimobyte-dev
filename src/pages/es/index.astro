---
import MainLayout from '@/layouts/MainLayout.astro';
import MainPage from '@/components/MainPage';
import { LANG } from '@/i18n/index';

// Get reCAPTCHA site key from environment variable
// Site key is public and safe to expose to the client
const recaptchaSiteKey = import.meta.env.RECAPTCHA_SITE_KEY || '6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI';

// SEO optimized titles and descriptions based on keyword research
const seoData = {
  es: {
    title: "Florencia Rímolo - Desarrolladora Full Stack | WordPress, Vue.js, Django | RimoByte",
    description: "Desarrolladora Full Stack especializada en WordPress, Vue.js, Django y desarrollo de e-commerce. Portfolio de Florencia Rímolo con proyectos web, aplicaciones y servicios de desarrollo freelance en Barcelona, España."
  },
  en: {
    title: "Florencia Rímolo - Full Stack Developer | WordPress, Vue.js, Django | RimoByte",
    description: "Full Stack Developer specialized in WordPress, Vue.js, Django and e-commerce development. Florencia Rímolo's portfolio featuring web projects, applications and freelance development services in Barcelona, Spain."
  }
};

const currentSeo = seoData.es;
---

<MainLayout 
  title={currentSeo.title}
  description={currentSeo.description}
  locale={LANG.SPANISH}
>
  <MainPage client:only="react" recaptchaSiteKey={recaptchaSiteKey} initialLocale={LANG.SPANISH} />
</MainLayout>
