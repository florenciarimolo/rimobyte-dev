---
import MainLayout from '@/layouts/MainLayout.astro';
import MainPage from '@/components/MainPage';
import { LANG } from '@/i18n/index';

// Get reCAPTCHA site key from environment variable
// Site key is public and safe to expose to the client
const recaptchaSiteKey = import.meta.env.RECAPTCHA_SITE_KEY || '6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI';

// SEO optimized titles and descriptions based on keyword research
const seoData = {
  es: {
    title: "Desarrolladora Full Stack | WordPress, Vue.js, Django",
    description: "Desarrolladora Full Stack especializada en WordPress, Vue.js, Django y e-commerce. Portfolio con proyectos web, aplicaciones y servicios freelance en Barcelona."
  },
  en: {
    title: "Full Stack Developer | WordPress, Vue.js, Django",
    description: "Full Stack Developer specialized in WordPress, Vue.js, Django and e-commerce. Portfolio featuring web projects, applications and freelance services in Barcelona."
  }
};

const currentSeo = seoData.es;
---

<MainLayout 
  title={currentSeo.title}
  description={currentSeo.description}
  locale={LANG.SPANISH}
>
  <MainPage client:only="react" recaptchaSiteKey={recaptchaSiteKey} initialLocale={LANG.SPANISH} />
</MainLayout>
