---
import StructuredData from '@/components/StructuredData.astro';
import '@/styles/global.css';
import '@fontsource/inter/300.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import { LANG, LANG_CODES } from '@/i18n/index';
import { 
  SITE_URL, 
  SITE_NAME, 
  TWITTER_HANDLE, 
  AUTHOR_NAME, 
  AUTHOR_TITLE_ES, 
  AUTHOR_TITLE_EN,
  DEFAULT_DESCRIPTION,
  DEFAULT_IMAGE
} from '@/constants';
import { getAlternateUrls, getCanonicalUrl, getLangFromPathname } from '@/utils/i18n-urls';

export interface Props {
  title: string;
  description?: string;
  locale?: string;
  keywords?: string;
  image?: string;
  type?: string;
  canonical?: string;
}

const { 
  title, 
  description = DEFAULT_DESCRIPTION,
  locale,
  keywords,
  image = DEFAULT_IMAGE,
  type = 'website',
  canonical
} = Astro.props;

// Get locale from URL if not provided
const currentLocale = locale || getLangFromPathname(Astro.url.pathname);

// Keywords por defecto basados en keyword research
const defaultKeywords = currentLocale === LANG.SPANISH
  ? "desarrolladora full stack, desarrolladora web, programadora full stack, desarrolladora WordPress, desarrolladora Vue.js, desarrolladora Django, desarrolladora freelance, desarrolladora e-commerce, desarrolladora web Espa√±a, desarrolladora web remoto, desarrollo web Barcelona, ingeniera de software, desarrolladora React, desarrolladora Spring Boot"
  : "full stack developer, web developer, WordPress developer, Vue.js developer, Django developer, freelance developer, e-commerce developer, remote web developer, software engineer, React developer, Spring Boot developer, web development Barcelona";

const finalKeywords = keywords || defaultKeywords;

// Generate canonical and alternate URLs
const canonicalUrl = canonical || getCanonicalUrl(Astro.url.pathname);
const alternateUrls = getAlternateUrls(Astro.url.pathname);

const langCode = currentLocale === LANG.SPANISH ? LANG_CODES.SPANISH : LANG_CODES.ENGLISH;
const htmlLang = currentLocale === LANG.SPANISH ? LANG.SPANISH : LANG.ENGLISH;
const authorTitle = currentLocale === LANG.SPANISH ? AUTHOR_TITLE_ES : AUTHOR_TITLE_EN;
const ogImageAlt = `${AUTHOR_NAME} - ${authorTitle}`;
---

<!DOCTYPE html>
<html lang={htmlLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={finalKeywords} />
    <meta name="author" content={AUTHOR_NAME} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="language" content={langCode} />
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Alternate Languages (Hreflang) -->
    <link rel="alternate" hreflang={LANG.SPANISH} href={alternateUrls.es} />
    <link rel="alternate" hreflang={LANG.ENGLISH} href={alternateUrls.en} />
    <link rel="alternate" hreflang="x-default" href={alternateUrls.es} />
    
    <!-- Favicon configuration for Google and all browsers -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:locale" content={langCode} />
    <meta property="og:site_name" content={SITE_NAME} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
    <meta name="twitter:creator" content={TWITTER_HANDLE} />
    
    <!-- Satoshi Font from Fontshare -->
    <link rel="stylesheet" href="https://api.fontshare.com/css?f[]=satoshi@300,400,500,600,700&display=swap">
    
    <!-- Structured Data -->
    <StructuredData type="person" locale={currentLocale} />
    <StructuredData type="website" locale={currentLocale} />
    <StructuredData type="professionalService" locale={currentLocale} />
    
    <!-- Google reCAPTCHA Enterprise -->
    <!-- Following official Google docs: https://www.google.com/recaptcha/enterprise -->
    <script src={`https://www.google.com/recaptcha/enterprise.js?render=${import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY || import.meta.env.RECAPTCHA_SITE_KEY || '6LcR8iUsAAAAAJAFkXt5Wgnw_6X49csU9Y26aoPt'}`} async defer is:inline></script>
    
    <!-- UnicornStudio - Only load if on WordPress landing page -->
    {Astro.url.pathname.includes('desarrolladora-wordpress-freelance') && (
      <script is:inline>
        !function(){if(!window.UnicornStudio){window.UnicornStudio={isInitialized:!1};var i=document.createElement("script");i.src="https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.29/dist/unicornStudio.umd.js",i.onload=function(){window.UnicornStudio.isInitialized||(UnicornStudio.init(),window.UnicornStudio.isInitialized=!0)},(document.head || document.body).appendChild(i)}}();
      </script>
    )}
  </head>
  <body class="text-gray-900 dark:text-white font-inter text-base antialiased transition-colors duration-300" style={Astro.url.pathname.includes('desarrolladora-wordpress-freelance') ? 'background: #000000 !important;' : ''}>
    <!-- Background for WordPress landing pages -->
    {Astro.url.pathname.includes('desarrolladora-wordpress-freelance') && (
      <style is:inline>
        {`
          html, body {
            background: #000000 !important;
          }
          #root {
            background: #000000 !important;
          }
        `}
      </style>
    )}
    <!-- Ensure main page has proper background -->
    {!Astro.url.pathname.includes('desarrolladora-wordpress-freelance') && (
      <style is:inline>
        {`
          html {
            background: transparent !important;
          }
          body {
            background: transparent !important;
          }
          body.dark {
            background: #111827 !important;
          }
          body:not(.dark) {
            background: #ffffff !important;
          }
          #root {
            background: transparent !important;
          }
        `}
      </style>
    )}
    <div id="root" style={Astro.url.pathname.includes('desarrolladora-wordpress-freelance') ? 'position: relative; z-index: 1; background: #000000;' : ''}>
      <slot />
    </div>
    
    <!-- Theme script -->
    <script>
      // Check for saved theme preference or default to dark
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.classList.toggle('dark', theme === 'dark');
      
      // Update body class based on theme
      if (theme === 'dark') {
        document.body.classList.add('dark');
      } else {
        document.body.classList.remove('dark');
      }
    </script>
  </body>
</html>

<style>
  :root {
    --gradient-start: #3F67FE;
    --gradient-end: #D42EFE;
  }
  
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-satoshi {
    font-family: 'Satoshi', sans-serif;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1f2937;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #4b5563;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
  
  /* Smooth transitions */
  * {
    transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
  }
</style>
