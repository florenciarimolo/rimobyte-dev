---
export const prerender = true;

import StructuredData from '@/components/StructuredData.astro';
import '@/styles/fonts.css';
import '@/styles/global.css';
// Keep Inter lean in the critical path: main regular + semi-bold.
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import { LANG, LANG_CODES } from '@/i18n/index';
import { 
  SITE_NAME, 
  SITE_URL,
  TWITTER_HANDLE, 
  AUTHOR_NAME, 
  AUTHOR_TITLE_ES, 
  AUTHOR_TITLE_EN,
  DEFAULT_DESCRIPTION
} from '@/constants';
import { getAlternateUrls, getCanonicalUrl, getLangFromPathname } from '@/utils/i18n-urls';
import { getImagePath } from 'astro-opengraph-images';

export interface Props {
  title: string;
  description?: string;
  locale?: string;
  keywords?: string;
  type?: string;
  canonical?: string;
  city?: string | null;
}

const { 
  title, 
  description = DEFAULT_DESCRIPTION,
  locale,
  keywords,
  type = 'website',
  canonical,
} = Astro.props;

// Get locale from URL if not provided
const currentLocale: typeof LANG.ENGLISH | typeof LANG.SPANISH = (locale as typeof LANG.ENGLISH | typeof LANG.SPANISH) || getLangFromPathname(Astro.url.pathname);

// Keywords por defecto basados en keyword research
const defaultKeywords = currentLocale === LANG.SPANISH
  ? "desarrolladora full stack, desarrolladora web, programadora full stack, desarrolladora WordPress, desarrolladora Vue.js, desarrolladora Nuxt, desarrolladora Django, desarrolladora freelance, desarrolladora e-commerce, desarrolladora web Espa√±a, desarrolladora web remoto, desarrollo web Barcelona, ingeniera de software, desarrolladora Astro, desarrolladora Spring Boot"
  : "full stack developer, web developer, WordPress developer, Vue.js developer, Nuxt developer, Django developer, freelance developer, e-commerce developer, remote web developer, software engineer, Astro developer, Spring Boot developer, web development Barcelona";

const finalKeywords = keywords || defaultKeywords;

// Generate canonical and alternate URLs
const canonicalUrl = canonical || getCanonicalUrl(Astro.url.pathname);
const alternateUrls = getAlternateUrls(Astro.url.pathname);

// OG image path generated at build by astro-opengraph-images (per-page, per locale)
const ogImage = getImagePath({ url: Astro.url, site: Astro.site });

const langCode = currentLocale === LANG.SPANISH ? LANG_CODES.SPANISH : LANG_CODES.ENGLISH;
const htmlLang = currentLocale === LANG.SPANISH ? LANG.SPANISH : LANG.ENGLISH;
const authorTitle = currentLocale === LANG.SPANISH ? AUTHOR_TITLE_ES : AUTHOR_TITLE_EN;
const ogImageAlt = `${AUTHOR_NAME} - ${authorTitle}`;
---

<!DOCTYPE html>
<html lang={htmlLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={finalKeywords} />
    <meta name="author" content={AUTHOR_NAME} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="language" content={langCode} />
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Alternate Languages (Hreflang) -->
    <link rel="alternate" hreflang={LANG.SPANISH} href={alternateUrls.es} />
    <link rel="alternate" hreflang={LANG.ENGLISH} href={alternateUrls.en} />
    <link rel="alternate" hreflang="x-default" href={alternateUrls.es} />
    
    <!-- Preconnect only to third-party origins we still use (e.g. reCAPTCHA) -->
    <link rel="preconnect" href="https://www.gstatic.com" crossorigin />
    
    <!-- Preload LCP image (200w) on main page so it's discoverable from HTML (improves LCP) -->
    {(['/es', '/es/', '/en', '/en/'].includes(Astro.url.pathname)) && (
      <link rel="preload" as="image" href={`${SITE_URL}/assets/images/programadora-web-200w.webp`} fetchpriority="high" />
    )}
    
    <!-- Favicon configuration for Google and all browsers -->
    <!-- Google Search requires at least one PNG favicon with minimum 48x48 size -->
    <!-- URLs absolutas para que Google pueda acceder a los favicons sin descargarlos todos -->
    <link rel="icon" type="image/png" sizes="192x192" href={`${SITE_URL}/favicon-192x192.png`} />
    <link rel="icon" type="image/png" sizes="144x144" href={`${SITE_URL}/favicon-144x144.png`} />
    <link rel="icon" type="image/png" sizes="96x96" href={`${SITE_URL}/favicon-96x96.png`} />
    <link rel="icon" type="image/png" sizes="48x48" href={`${SITE_URL}/favicon-48x48.png`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${SITE_URL}/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${SITE_URL}/favicon-16x16.png`} />
    <link rel="shortcut icon" href={`${SITE_URL}/favicon.ico`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${SITE_URL}/apple-touch-icon.png`} />
    <link rel="manifest" href={`${SITE_URL}/site.webmanifest`} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="600" />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:locale" content={langCode} />
    <meta property="og:site_name" content={SITE_NAME} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <!-- twitter:url must be absolute URL - canonicalUrl is already absolute (SITE_URL + pathname) -->
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
    <meta name="twitter:creator" content={TWITTER_HANDLE} />
    
    <!-- Satoshi & Inter are served locally (see styles/fonts.css and @fontsource/inter) -->
    
    <!-- Structured Data -->
    <StructuredData type="person" locale={currentLocale} />
    <StructuredData type="website" locale={currentLocale} />
    <StructuredData type="professionalService" locale={currentLocale} />
    
    <!-- Google reCAPTCHA Enterprise: load when contact section is near viewport to reduce initial JS -->
    <script is:inline define:vars={{ recaptchaSiteKey: import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY || import.meta.env.RECAPTCHA_SITE_KEY || '6LcR8iUsAAAAAJAFkXt5Wgnw_6X49csU9Y26aoPt' }}>
      (function() {
        var loaded = false;
        function loadRecaptcha() {
          if (loaded) return;
          loaded = true;
          var s = document.createElement('script');
          s.src = 'https://www.google.com/recaptcha/enterprise.js?render=' + recaptchaSiteKey;
          s.async = true;
          s.defer = true;
          (document.head || document.documentElement).appendChild(s);
        }
        function observeContact() {
          var contact = document.getElementById('contact');
          if (contact && typeof IntersectionObserver !== 'undefined') {
            var io = new IntersectionObserver(function(entries) {
              if (entries[0].isIntersecting) { loadRecaptcha(); io.disconnect(); }
            }, { rootMargin: '200px' });
            io.observe(contact);
            return true;
          }
          return false;
        }
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', function() {
            if (!observeContact()) {
              var attempts = 0;
              var t = setInterval(function() {
                if (observeContact() || ++attempts > 10) clearInterval(t);
              }, 500);
            }
          });
        } else {
          if (!observeContact()) setTimeout(loadRecaptcha, 3000);
        }
      })();
    </script>
    
    <!-- UnicornStudio - Only load if on WordPress landing page -->
    {Astro.url.pathname.includes('desarrolladora-wordpress-freelance') && (
      <script is:inline>
        !function(){if(!window.UnicornStudio){window.UnicornStudio={isInitialized:!1};var i=document.createElement("script");i.src="https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.29/dist/unicornStudio.umd.js",i.onload=function(){window.UnicornStudio.isInitialized||(UnicornStudio.init(),window.UnicornStudio.isInitialized=!0)},(document.head || document.body).appendChild(i)}}();
      </script>
    )}
  </head>
  <body class="text-gray-900 dark:text-white font-inter text-base antialiased transition-colors duration-300" style={Astro.url.pathname.includes('desarrolladora-wordpress-freelance') ? 'background: #000000 !important;' : ''}>
    <!-- Background for WordPress landing pages -->
    {Astro.url.pathname.includes('desarrolladora-wordpress-freelance') && (
      <style is:inline>
        {`
          html, body {
            background: #000000 !important;
          }
          #root {
            background: #000000 !important;
          }
        `}
      </style>
    )}
    <!-- Ensure main page has proper background -->
    {!Astro.url.pathname.includes('desarrolladora-wordpress-freelance') && (
      <style is:inline>
        {`
          html {
            background: transparent !important;
          }
          body {
            background: transparent !important;
          }
          body.dark {
            background: #111827 !important;
          }
          body:not(.dark) {
            background: #ffffff !important;
          }
          #root {
            background: transparent !important;
          }
        `}
      </style>
    )}
    <div id="root" style={Astro.url.pathname.includes('desarrolladora-wordpress-freelance') ? 'position: relative; z-index: 1; background: #000000;' : ''}>
      <slot />
    </div>
    
    <!-- Theme script: run after first paint to avoid long main-thread task -->
    <script>
      requestAnimationFrame(function() {
        var theme = localStorage.getItem('theme') || 'dark';
        document.documentElement.classList.toggle('dark', theme === 'dark');
        if (theme === 'dark') document.body.classList.add('dark');
        else document.body.classList.remove('dark');
      });
    </script>
  </body>
</html>

<style>
  :root {
    --gradient-start: #3F67FE;
    --gradient-end: #D42EFE;
  }
  
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-satoshi {
    font-family: 'Satoshi', sans-serif;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1f2937;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #4b5563;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
  
  /* Smooth transitions */
  * {
    transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
  }
</style>
